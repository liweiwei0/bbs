<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="fun.lww.bbs.dao.ReviewDao">

    <resultMap type="fun.lww.bbs.bean.Review" id="review">
        <id column="id" property="id"/>
        <result column="content" property="content"/>
        <result column="message_id" property="messageId"/>
        <result column="user_id" property="userId"/>
        <result column="create_time" property="createTime"/>
        <result column="modify_time" property="modifyTime"/>
    </resultMap>

    <sql id="columns">
        id, content, message_id, user_id, create_time, modify_time
    </sql>

    <sql id="columnNonId">
        content, message_id, user_id, create_time, modify_time
    </sql>

    <insert id="insert" parameterType="fun.lww.bbs.bean.Review" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        INSERT INTO review (<include refid="columnNonId"/>)
        VALUES (#{content}, #{messageId}, #{userId}, NOW(), NOW())
    </insert>

    <update id="update" parameterType="fun.lww.bbs.bean.Review">
        UPDATE review SET content = #{content}, modify_time = NOW() WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="java.lang.Integer">
        DELETE FROM review WHERE id = #{id}
    </delete>

    <select id="findById" parameterType="java.lang.Integer" resultMap="review">
        SELECT <include refid="columns"/> FROM review WHERE id = #{id}
    </select>

    <select id="findByMessageId" parameterType="java.lang.Integer" resultMap="review">
        SELECT <include refid="columns"/> FROM review
        WHERE message_id = #{messageId} ORDER BY modify_time ASC
    </select>

    <select id="findIdByUserId" parameterType="java.lang.Integer" resultType="java.lang.Integer">
        SELECT DISTINCT message_id FROM review WHERE user_id = #{userId}
    </select>

    <delete id="deleteByMessageId" parameterType="java.lang.Integer">
        DELETE FROM review WHERE 1=2
        <if test="messageId != null">
            OR message_id = #{messageId}
        </if>
    </delete>

    <select id="findByContent" parameterType="java.lang.String" resultType="java.lang.Integer">
        SELECT DISTINCT message_id FROM review WHERE 1=2
        <if test="content != null and content != ''">
            OR content like CONCAT('%', #{content}, '%')
        </if>
    </select>
</mapper>