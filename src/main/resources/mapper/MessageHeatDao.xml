<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="fun.lww.bbs.dao.MessageHeatDao">

    <resultMap type="fun.lww.bbs.bean.MessageHeat" id="messageHeat">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="message_id" property="messageId"/>
        <result column="create_time" property="createTime"/>
        <result column="modify_time" property="modifyTime"/>
    </resultMap>

    <sql id="columns">
        id, user_id, message_id, create_time, modify_time
    </sql>

    <sql id="columnNonId">
        user_id, message_id, create_time, modify_time
    </sql>

    <insert id="insert" parameterType="fun.lww.bbs.bean.MessageHeat" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        INSERT INTO message_heat (<include refid="columnNonId"/>)
        VALUES (#{userId}, #{messageId}, NOW(), NOW())
    </insert>

    <delete id="delete" parameterType="java.lang.Integer">
        DELETE FROM message_heat WHERE id = #{id}
    </delete>

    <select id="getCount" parameterType="java.lang.Integer" resultType="java.lang.Long">
        SELECT COUNT(1) FROM message_heat WHERE message_id = #{messageId} AND user_id = #{userId}
    </select>

</mapper>